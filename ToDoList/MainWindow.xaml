<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="To Do List" Height="742.776" Width="525" Icon="50-512.ico" StateChanged="Window_StateChanged" ContentStringFormat="">
    <Grid x:Name="MyGrid"  Margin="0,0,2,6" Loaded="MyGrid_Loaded" >

        <Button x:Name="b1"  Content="Записать" HorizontalAlignment="Left" Height="22" Margin="414,558,0,0" VerticalAlignment="Top" Width="91" Click="Button_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="0,560,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286" ScrollViewer.CanContentScroll="True" Foreground="#FF080808" Background="#FFFDFDFD">
            <TextBox.CaretBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFDE9595" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.CaretBrush>
        </TextBox>
        <DatePicker x:Name="DatePicker1" HorizontalAlignment="Left" Margin="291,560,0,0" VerticalAlignment="Top"/>
        <ScrollViewer HorizontalAlignment="Left" Height="545" Margin="10,0,0,0" VerticalAlignment="Top" Width="494" CanContentScroll="True" Grid.IsSharedSizeScope="True">
