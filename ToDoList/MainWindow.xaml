<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ToDoList.MainWindow"
        
   Title="To Do List" Height="678.776" Width="522.667" Icon="50-512.ico" StateChanged="Window_StateChanged" ContentStringFormat="" MinHeight="679" MinWidth="523" MaxWidth="523" MaxHeight="679" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <ImageBrush ImageSource="scrn_big_1 (1).jpg"/>
    </Window.Background>

    <Grid x:Name="MyGrid"  Margin="0,0,-3,0" Loaded="MyGrid_Loaded" Height="642" VerticalAlignment="Top" >
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="254*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="b1"  Content="Добавить" HorizontalAlignment="Left" Height="49" Margin="396,575,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click" Grid.Column="1" FontFamily="Comic Sans MS" FontSize="17" Background="#FF43CD01" Opacity="0.7">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1D6418" Offset="0"/>
                    <GradientStop Color="#FF155D10" Offset="0.427"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="49" Margin="1,575,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" ScrollViewer.CanContentScroll="True" Foreground="#FF080808" Background="#FFFDFDFD" BorderThickness="1" SelectionBrush="Black" Grid.Column="1"  >
            <TextBox.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF1B7401"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
            <TextBox.CaretBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFDE9595" Offset="1"/>
                </LinearGradientBrush>
            </TextBox.CaretBrush>
        </TextBox>
        <DatePicker x:Name="DatePicker1" HorizontalAlignment="Left" Margin="291,551,0,0" VerticalAlignment="Top" Grid.Column="1" Height="24" Width="100" Background="{x:Null}">
            <DatePicker.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="#FF41A811" Offset="1"/>
                    <GradientStop Color="#FF095905" Offset="0.956"/>
                    <GradientStop Color="#FFB4FB93"/>
                </LinearGradientBrush>
            </DatePicker.BorderBrush>
        </DatePicker>
        <ScrollViewer HorizontalAlignment="Left" Height="536" Margin="1,10,0,0" VerticalAlignment="Top" Width="483" CanContentScroll="True" Grid.IsSharedSizeScope="True" Grid.Column="1" Opacity="0.7">
            <StackPanel x:Name="panel" HorizontalAlignment="Left" Height="526" VerticalAlignment="Top" Width="493" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Grid.IsSharedSizeScope="True" CanVerticallyScroll="True" CanHorizontallyScroll="True"/>
        </ScrollViewer>

        <StackPanel HorizontalAlignment="Left" Height="100" Margin="77,677,0,-135" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
        <Button x:Name="b3" Content="Изменить" HorizontalAlignment="Left" Margin="431,562,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" Visibility="Hidden" Grid.Column="1" Height="20"/>
        <Label x:Name="label1" HorizontalAlignment="Left" Margin="68,622,0,0" VerticalAlignment="Top" Width="166" Grid.Column="1" Height="10"/>





    </Grid>
</Window>
