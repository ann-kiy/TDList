        </ScrollViewer>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="414,587,0,0" VerticalAlignment="Top" Width="91" Click="Button_Click_1"/>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="86,677,0,-60" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="b3" Content="save" HorizontalAlignment="Left" Margin="440,562,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" Visibility="Hidden"/>
        <Label x:Name="label1" HorizontalAlignment="Left" Margin="77,605,0,0" VerticalAlignment="Top" Width="166"/>





    </Grid>
</Window>
